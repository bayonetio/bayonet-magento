            <values>
                <value id="fingerprint" type="host">fingerprinting.bayonet.io/</value>
                <value id="cdnbasket" type="host">*.cdnbasket.net/</value>
                <value id="cdnwidget" type="host">*.cdnwidget.com/</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
